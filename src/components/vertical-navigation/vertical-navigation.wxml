<view class="ac-nav-wrapper">
  <scroll-view scroll-top="{{navScrollTop}}" scroll-y scroll-with-animation class="ac-scroll-view ac-nav-bar">
    <slot name="nav"></slot>
  </scroll-view>
  <scroll-view bindscroll="onScroll" scroll-top="{{contentScrollTop}}"
    scroll-y scroll-with-animation class="ac-scroll-view ac-nav-content"
    bindscroll="onScroll">
    <slot name="content"></slot>
  </scroll-view>
</view>